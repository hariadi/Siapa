{
    "name": "hariadi/siapa",
    "description": "A simple PHP library for parsing complex Malay names into their individual components",
    "keywords": [
        "malay", "name", "parser", "gender", "methods", "utf-8",
        "helpers", "utils", "utf"
    ],
    "homepage": "https://github.com/hariadi/Siapa",
    "license": "MIT",
    "authors": [
        {
            "name": "Hariadi Hinta",
            "email": "diperakui@yahoo.com",
            "homepage": "https://hariadi.org"
        }
    ],
    "require": {
        "php": "^8.0|^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.6",
        "phpstan/phpstan": "^1.4"
    },
    "support": {
        "issues": "https://github.com/hariadi/Siapa/issues",
        "source": "https://github.com/hariadi/Siapa"
    },
    "autoload": {
        "psr-4": {
        	"Hariadi\\Siapa\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hariadi\\Siapa\\": "tests/"
        }
    },
  "scripts": {
	"format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
	"analyse": "vendor/bin/phpstan analyse src tests"
  }
}
